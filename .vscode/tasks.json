{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO: Build (rpipico)",
      "type": "process",
      "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
      "args": ["run", "-e", "rpipico"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

